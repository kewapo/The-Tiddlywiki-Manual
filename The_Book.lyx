\end_layout

\begin_layout Plain Layout

this.computeAttributes();
\end_layout

\begin_layout Plain Layout

this.execute();
\end_layout

\begin_layout Plain Layout

var domNode = this.create(parent,nextSibling);
\end_layout

\begin_layout Plain Layout

this.domNodes.push(domNode);
\end_layout

\begin_layout Plain Layout

parent.insertBefore(domNode,nextSibling);
\end_layout

\begin_layout Plain Layout

this.renderChildren(domNode,null);
\end_layout

\begin_layout Plain Layout

};
\end_layout

\end_inset


\end_layout

